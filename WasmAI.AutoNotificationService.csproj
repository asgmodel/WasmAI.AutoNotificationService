<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
	<ItemGroup>
		<None Update="*.md">
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</None>
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="MailKit" Version="4.11.0" />
		<PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="2.3.0" />
		<PackageReference Include="Twilio" Version="7.10.0" />
	</ItemGroup>

	<PropertyGroup>
		<PackageId>WasmAI.AutoNotificationService</PackageId>

		<Version>1.0.0</Version>

		<Authors>Anas Al-Tawil</Authors>

		<Company>GitHub</Company>
		<PackageDescription>

			WasmAI.AutoNotificationService is a library that provides various notification services using multiple providers such as Email, SMS, Push Notifications, and etc. This library allows you to send notifications to users easily and efficiently through a unified interface.
		</PackageDescription>
		<RepositoryUrl>
			
		</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

</Project>
